<div class="container">
  <div class="row">
    <div class="col-md-6 col-sm-12">
      <h2>Upload new video</h2>
      <%= simple_form_for @video, html: { multipart: true } do |f| %>
        <%= f.input :name %>
        <%= f.input :video_file, as: :file %>
        <%= f.button :submit, class: 'btn-primary', value: 'Upload Video' %>
      <% end %>
    </div>
  </div>
</div>

